<!--components/form/form.wxml-->
<view class='component'>
  <form>
    <view class="page__bd">
      <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">错误提示</view>

      <view class="weui-cells__title">信息请填写完整</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">姓名</view>
          </view>
          <view class="weui-cell__bd">
            <input name="name" class="weui-input" placeholder="请输入姓名" />
          </view>
        </view>

        <view class="up-select weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">性别</view>
          </view>
          <view class="weui-cell__bd">
            <view class="weui-cell weui-cell_select">
              <view class="weui-cell__bd">
                <picker bindchange="bindAccountChange" value="{{accountIndex}}" range="{{gender}}">
                  <view class="weui-select">{{gender[0]}}</view>
                </picker>
              </view>
            </view>
          </view>
        </view>

        <view class="up-select weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">民族</view>
          </view>
          <view class="weui-cell__bd">
            <view class="weui-cell weui-cell_select">
              <view class="weui-cell__bd">
                <picker bindchange="bindAccountChange" value="{{accountIndex}}" range="{{nation}}">
                  <view class="weui-select">{{nation[0]}}</view>
                </picker>
              </view>
            </view>
          </view>
        </view>

        <view class="weui-cell weui-cell_input weui-cell_vcode">
          <view class="weui-cell__hd">
            <view class="weui-label">手机号</view>
          </view>
          <view class="weui-cell__bd">
            <input name="telephone" class="weui-input" placeholder="请输入手机号" />
          </view>
        </view>

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">身份证号</view>
          </view>
          <view class="weui-cell__bd">
            <input name="telephone" class="weui-input" placeholder="请输入身份证号" />
          </view>
        </view>

        <view class="up-select weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">队号</view>
          </view>
          <view class="weui-cell__bd">
            <view class="weui-cell weui-cell_select">
              <view class="weui-cell__bd">
                <picker bindchange="bindAccountChange" value="{{accountIndex}}" range="{{groupNum}}">
                  <view class="weui-select">{{groupNum[0]}}</view>
                </picker>
              </view>
            </view>
          </view>
        </view>
      
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">户口号</view>
          </view>
          <view class="weui-cell__bd">
            <input name="household_num" class="weui-input" placeholder="请输入户口号" />
          </view>
          <view class="weui-cell__ft">
            <icon type="warn" size="23" color="#E64340"></icon>
          </view>
        </view>

      </view>

      <view class="weui-cells__title">住址</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
          <view class="weui-cell__bd">
            <textarea name="address" class="weui-textarea" placeholder="请输入详细地址" style="height: 3.3em" />
            <view class="weui-textarea-counter">0/200</view>
          </view>
        </view>
      </view>

      <view class="weui-cells__title">开关</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_switch">
          <view class="weui-cell__bd">是否替他人上报</view>
          <view class="weui-cell__ft">
            <switch checked />
          </view>
        </view>
      </view>

      <view class="weui-btn-area">
        <button class="weui-btn" type="primary" bindtap="showTopTips">确定</button>
      </view>
    </view>
  </form>
</view>